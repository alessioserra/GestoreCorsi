<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.corsi.GestoreCorsiController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Periodo">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtPeriodo">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="cercaCorsi" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca Corsi">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="statCorsi" mnemonicParsing="false" onAction="#doCalcolaStat" text="Statistiche Corsi" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="103.0" prefWidth="100.0">
               <children>
                  <TextArea fx:id="txtResult" prefHeight="400.0" prefWidth="450.0" />
               </children></HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label alignment="CENTER" prefHeight="27.0" prefWidth="463.0" text="Gestione Corsi" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </top>
</BorderPane>
